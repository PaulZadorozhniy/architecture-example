  "private": true,
  "scripts": {
    "start": "pm2 startOrReload entrypoint.json --update-env",
    "stop": "pm2 stop entrypoint.json --update-env",
    "restart": "pm2 reload entrypoint.json --update-env",
    "monitor": "pm2 monit",
    "web:start": "ts-node ./web/index.ts",
    "external-api:start": "ts-node ./external-api/index.ts",
    "listeners:start": "yarn workspace listeners start",
    "test": "yarn test:unit && yarn test:integration && yarn test:acceptance",
    "common:test": "yarn workspace common test",
    "listeners:test": "yarn workspace listeners test",
    "client:build": "yarn workspace client build",
    "client:test": "yarn workspace client test",
    "test:unit": "mocha --opts ./test/mocha.unit.opts --reporter spec",
    "test:integration": "mocha --opts ./test/mocha.integration.opts --reporter spec",
    "test:acceptance": "mocha --opts ./test/mocha.acceptance.opts --reporter spec",
    "lint": "eslint common/. listeners/. --config .eslintrc.json --fix --debug",
    "prepush": "yarn lint && yarn test",
    "yarn": "yarn",
    "populate-db": "ts-node ./scripts/populate-db.ts",
    "get-test-jwt": "ts-node web/test/helpers/get-jwt-token.ts",
    "create-dvs-topics": "ts-node ./scripts/dvs-create-topic.ts"
  },
