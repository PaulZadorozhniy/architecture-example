    "@types/koa-router": "^7.0.28",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^2.7.32",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "faker": "^4.1.0",
    "husky": "^0.14.3",
